<% layout('layouts/boilerplate') %>
<link rel="stylesheet" href="../stylesheets/stars.css">

<div class="row mb-5"> 
        <div class="col-6">
            <%= success %>
            <div class="card">
                <img  src="<%= image %>" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title"><%= title %></h5>
                    <p class="card-text"><%= description %></p>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item text-muted"><%= location %></li>
                    <li class="list-group-item">Submitted By <b style="text-transform: capitalize;"><%= author.username %></b></li>
                    <li class="list-group-item">$<%= price %>/night</li>
                </ul>

                <!-- <div class="card-body">
                    <div class="row">
                        
                        <div class="col-2">
                            <form action="/campgrounds/<%= _id %>?_method=DELETE" method="post">
                                <button class="btn btn-danger">Delete</button>   
                            </form>
                        </div>
                        <div class="col-6">
                            <a href="http://localhost:6060/campgrounds/<%= _id %>/edit" class="btn btn-primary">Edit Campground</a>
                        </div>
                    </div>
                </div> -->
                <% if ( currentUser && author.equals(currentUser._id)) { %>
                <div class="card-body">
                    <a href="http://localhost:6060/campgrounds/<%= _id %>/edit" class="card-link btn btn-info">Edit</a>
                    <form class="d-inline" action="/campgrounds/<%= _id %>?_method=DELETE" method="post">
                        <button class="btn btn-danger">Delete</button>   
                    </form>
                </div>
                <% } %>



                <!-- <div class="card-body">
                    <a href="http://localhost:6060/campgrounds/<%= _id %>/edit" class="btn btn-primary">Edit Campground</a>
                </div>
                
                <form class="p-3" action="/campgrounds/<%= _id %>?_method=DELETE" method="post">
                    <button class="btn btn-danger">Delete</button>   
                </form> -->
                <div class="card-footer text-muted">
                    2 days ago
                </div>

                <!-- <a href="http://localhost:6060/campgrounds">All campgrounds</a> -->
                
            </div>
        </div>

        <div class="col-6">
            <% if (currentUser) { %>
            <form action="/campgrounds/<%= _id %>/reviews" method="post" class="p-3 validate-form" novalidate>
                <h2>Leave a review</h2>
                <div class="mb-3">
                    <fieldset class="starability-basic">
                        <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
                        <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                        <label for="first-rate1" title="Terrible">1 star</label>
                        <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                        <label for="first-rate2" title="Not good">2 stars</label>
                        <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                        <label for="first-rate3" title="Average">3 stars</label>
                        <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                        <label for="first-rate4" title="Very good">4 stars</label>
                        <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                        <label for="first-rate5" title="Amazing">5 stars</label>
                      </fieldset>
                </div>

                <div class="mb-3">
                    <label class="form-label" for="message">Message</label>
                    <textarea name="review[message]" class="form-control" id="message" cols="30" rows="4" required></textarea>
                </div>

                <button class="btn btn-success">Submit</button>
            </form>
            <% } %>

            <% for (r of review) { %>
                <div class="p-2">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title" style="text-transform: capitalize;"><%=r.author.username%></h5>
                            <p class="starability-result" data-rating="<%=r.rating%>">
                                Rated: <%=r.rating%> stars
                            </p>
                            <p class="card-text">Message: <%=r.message%></p>
                            <% if( currentUser && r.author.equals(currentUser._id) ) { %>
                            <form action="/campgrounds/<%= _id %>/reviews/<%=r._id%>?_method=DELETE" method="post">
                                <button class="btn btn-sm btn-danger">Delete</button>
                            </form>
                            <% } %>
                        </div>
                    </div>
                </div>
            <% } %>
        </div>
</div>
